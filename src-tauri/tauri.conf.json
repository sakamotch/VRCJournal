{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "VRCJournal",
  "version": "0.1.0",
  "identifier": "com.sakamotch.vrcjournal",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "VRCJournal",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": ["en-US", "ja-JP"]
      },
      "nsis": {
        "languages": ["English", "Japanese"],
        "displayLanguageSelector": true
      }
    }
  }
}
